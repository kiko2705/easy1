<% form_for @box_project do |f| %>
  <% if @box_project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@box_project.errors.count, "error") %> Imposs√≠vel persistir dado:</h2>

      <ul>
      <% @box_project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
